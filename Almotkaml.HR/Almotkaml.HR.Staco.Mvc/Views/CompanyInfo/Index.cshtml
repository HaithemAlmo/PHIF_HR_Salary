@model CompanyInfoModel

@{
    ViewBag.Title = "بيانات الجهة";
}

@using (Html.BeginForm(Html.Action(), Html.Controller(), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset class="no-border">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewBag.Title
                    </div>
                    <div id="ajax-form">
                        @Html.Partial("_Form", Model)
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @if (Model.CanSubmit)
                                {
                                    <input name="save" type="submit" value="حفظ" class="btn btn-success js-submit"/>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel -->
            </div>
        </div>
    </fieldset>
}
