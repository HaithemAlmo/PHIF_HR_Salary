@using Almotkaml.Extensions
@model SalaryInfoIndexModel

@{
    ViewBag.Title = "البيانات المالية";
}

<br />

@Html.Note()

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">@ViewBag.Title</div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table data-order='[]' class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ر.ت</th>
                                <th>الاسم</th>
                                <th>المرتب الاساسي</th>
                                <th>@Html.Show(Model.CanSubmit)</th>
                            </tr>
                        </thead>
                        <tbody>
                        @{
                            var count = 0;
                        }
                        @foreach (var item in Model.SalaryInfoGrid)
                        {
                            count++;
                            <tr class="odd gradeX">
                                <td>@count</td>
                                <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                <td>@item.BasicSalary.ToLyd()</td>
                                @if (!item.Edit)
                                {
                                    <td>
                                        @Html.ActionLink("تعديل", "Edit", new {id = item.EmployeeId}, new {@class = "btn btn-info"})
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.ActionLink("اضافة", "Edit", new {id = item.EmployeeId}, new {@class = "btn btn-success"})
                                    </td>
                                }
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
<!-- /.panel -->
