@model LoginModel

@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = "~/Views/Shared/_OutSystem.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.SavedModel(Model)
    <div style="margin: auto; width: 600px;">
        @*<img src="~/Icons/13718763_1042040192498422_4612693425570392761_n.jpg" style="width: 600px; border-radius: 40px; margin: auto"/>*@
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default" style="margin-top: 25px;">
                    <div class="panel-heading">
                        <table><tr><td>
                            <h3 class="panel-title">تسجيل الدخول</h3></td></tr></table>


                    </div>
                    <div class="panel-body">
                        <div class="note">@Html.Application().Message</div>
                        <br/>
                        @Html.ValidationSummary(true, "", new {@class = "note"})
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.UserName, new {@class = "form-control", placeholder = "اسم الدخول", autofocus = ""})
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new {@class = "form-control", placeholder = "كلمة المرور", value = ""})
                        </div>
                        @*<div class="form-group">
                            @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearsList)
                                , new {@class = "field_menu form-control", style="width: 100% !important"})
                        </div>*@
                        <!-- Change this to a button or input when using this as a form -->
                        <input type="submit" name="submit" value="دخول" class="btn btn-lg btn-success btn-block"/>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div></div>
}