@using Almotkaml.HR
@model TrainingFormModel

<div class="panel-body">
    @Html.SavedModel(Model)
    <div>
        @Html.AjaxNote()
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.TrainingType, new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.TrainingType, new { @class = "field_menu form-control", onchange = "$(this.form).submit();" })
                @Html.ValidationMessageFor(model => model.TrainingType)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DevelopmentTypeAId)
                @Html.DropDownListFor(model => model.DevelopmentTypeAId, new SelectList(Model.DevelopmentTypeAList, nameof(DevelopmentTypeAListItem.DevelopmentTypeAId), nameof(DevelopmentTypeAListItem.Name)), "--اختر--", new {@class = "field_menu form-control", onchange = "$(this.form).submit();"})
                @Html.ValidationMessageFor(model => model.DevelopmentTypeAId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DevelopmentTypeBId)
                @Html.DropDownListFor(model => model.DevelopmentTypeBId, new SelectList(Model.DevelopmentTypeBList, nameof(DevelopmentTypeBListItem.DevelopmentTypeBId), nameof(DevelopmentTypeBListItem.Name)), "--اختر--", new {@class = "field_menu form-control", onchange = "$(this.form).submit();"})
                @Html.ValidationMessageFor(model => model.DevelopmentTypeBId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DevelopmentTypeCId)
                @Html.DropDownListFor(model => model.DevelopmentTypeCId, new SelectList(Model.DevelopmentTypeCList, nameof(DevelopmentTypeCListItem.DevelopmentTypeCId), nameof(DevelopmentTypeCListItem.Name)), "--اختر--", new {@class = "field_menu form-control", onchange = "$(this.form).submit();"})
                @Html.ValidationMessageFor(model => model.DevelopmentTypeCId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DevelopmentTypeDId)
                @Html.DropDownListFor(model => model.DevelopmentTypeDId, new SelectList(Model.DevelopmentTypeDList, nameof(DevelopmentTypeDListItem.DevelopmentTypeDId), nameof(DevelopmentTypeDListItem.Name)), "--اختر--", new {@class = "field_menu form-control", onchange = "$(this.form).submit();"})
                @Html.ValidationMessageFor(model => model.DevelopmentTypeDId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.TrainingPlace, new {@class = "control-label"})
                @Html.EnumDropDownListFor(model => model.TrainingPlace, "--اختر--", new {@class = "field_menu form-control"})
                @Html.ValidationMessageFor(model => model.TrainingPlace)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.CountryId)
                @Html.DropDownListFor(model => model.CountryId, new SelectList(Model.CountryList, nameof(CountryListItem.CountryId), nameof(CountryListItem.Name)), "--اختر--", new { @class = "field_menu form-control", onchange = "$(this.form).submit();" })
                @Html.ValidationMessageFor(model => model.CountryId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.CityId)
                @Html.DropDownListFor(model => model.CityId, new SelectList(Model.CityList, nameof(CityListItem.CityId), nameof(CityListItem.Name)), "--اختر--", new {@class = "field_menu form-control"})
                @Html.ValidationMessageFor(model => model.CityId)
            </div>
        </div>
        @if (Model.TrainingType == TrainingType.Study || Model.TrainingType == TrainingType.Training)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Subject)
                    <button type="button" class="field_button form-control" style="text-align: right" data-toggle="modal" data-target="#myModalThree">@Model.CourseName</button>
                    @Html.ValidationMessageFor(model => model.CourseId)
                </div>
            </div>
        }
        else if (Model.TrainingType == TrainingType.Collaboration)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Subject)
                    @Html.TextBoxFor(model => model.Subject, new { @class = "field_text form-control" })
                    @Html.ValidationMessageFor(model => model.Subject)
                </div>
            </div>
        }
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.RequestedQualificationId)
                @Html.DropDownListFor(model => model.RequestedQualificationId, new SelectList(Model.RequestedQualificationList, nameof(RequestedQualificationListItem.RequestedQualificationId), nameof(RequestedQualificationListItem.Name)), "--اختر--", new { @class = "field_menu form-control" })
                @Html.ValidationMessageFor(model => model.RequestedQualificationId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.CorporationId)
                <button type="button" class="field_button form-control" style="text-align: right" data-toggle="modal" data-target="#myModalTwo">@Model.CorporationName</button>
                @Html.ValidationMessageFor(model => model.CorporationId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.ExecutingAgency)
                @Html.TextBoxFor(model => model.ExecutingAgency, new {@class = "field_text form-control"})
                @Html.ValidationMessageFor(model => model.ExecutingAgency)
            </div>
        </div>
       
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DecisionNumber)
                @Html.TextBoxFor(model => model.DecisionNumber, new {@class = "field_text form-control"})
                @Html.ValidationMessageFor(model => model.DecisionNumber)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DecisionDate)
                @Html.DatePickerFor(model => model.DecisionDate, new { @class = "field_text form-control" })
                @Html.ValidationMessageFor(model => model.DecisionDate)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DeducationType, new {@class = "control-label"})
                @Html.EnumDropDownListFor(model => model.DeducationType, "--اختر--", new {@class = "field_menu form-control"})
                @Html.ValidationMessageFor(model => model.DeducationType)
            </div>
        </div>
       
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DevelopmentStateId)
                @Html.DropDownListFor(model => model.DevelopmentStateId, new SelectList(Model.DevelopmentStateList, nameof(DevelopmentStateListItem.DevelopmentStateId), nameof(DevelopmentStateListItem.Name)), "--اختر--", new { @class = "field_menu form-control" })
                @Html.ValidationMessageFor(model => model.DevelopmentStateId)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DateFrom)
                @Html.DatePickerFor(model => model.DateFrom, new {@class = "field_text form-control"})
                @Html.ValidationMessageFor(model => model.DateFrom)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DateTo)
                @Html.DatePickerFor(model => model.DateTo, new {@class = "field_text form-control"})
                @Html.ValidationMessageFor(model => model.DateTo)
            </div>
        </div>

    </div>
    <fieldset class="almotkaml-fieldset">
        <legend>التفاصيل</legend>
        <div class="row">
            <div class="row">
                @{Html.EnableClientValidation(false);}
                @Html.HiddenFor(model => model.TrainingDetailForm.TrainingDetailId)
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TrainingDetailForm.EmployeeId)
                        <button type="button" class="field_button form-control" style="text-align: right" data-toggle="modal" data-target="#myModal">@Model.TrainingDetailForm.EmployeeName</button>
                        @Html.ValidationMessageFor(model => model.TrainingDetailForm.EmployeeId)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <input name="save" type="submit" value="حفظ" class="btn btn-warning js-submit"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table style="overflow-x: hidden; max-height: 600px" data-order='[]' class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>اسم الموظف</th>
                                    @if (Model.CanSubmit)
                                    {
                                        <th>تعديل</th>
                                        <th>حذف</th>
                                    }
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.TrainingDetailForm.TrainingDetailGrid)
                                {
                                    <tr class="odd gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                        @if (Model.CanSubmit)
                                        {
                                            <td>
                                                <button name="editDetailId" value="@item.TrainingDetailId" class="btn btn-info">تعديل</button>
                                            </td>
                                            <td>
                                                @Html.Partial("_DeleteDialog", new DeleteDialog("DetailId", item.TrainingDetailId))
                                            </td>
                                        }
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div> <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </fieldset>
</div>
   <!-- Region EmployeeGrid -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">الموظفين</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table style="overflow-x: hidden; max-height: 600px" data-order='[]' class="table table-striped table-bordered table-hover" id="dataTables-example2">
                                    <thead>
                                        <tr>
                                            <th width="20%"></th>
                                            <th width="20%">الرقم الوظيفي</th>
                                            <th width="20%">الاسم</th>
                                            <th width="20%">الإدارة</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.TrainingDetailForm.EmployeeGrid)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@Html.RadioButtonFor(model => model.TrainingDetailForm.EmployeeId, item.EmployeeId, new { onclick = "hideModal('myModal');$('.modal-backdrop').remove();$(this.form).submit();", data_dismiss = "modal" })</td>
                                                <td>@Html.DisplayFor(modelItem => item.JobNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ArabicFullName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>                    <!-- /.panel-body -->
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>
<!-- End Region EmployeeGrid -->
@Html.HiddenFor(model => model.TrainingDetailForm.EmployeeId)

