@using System.Web.Mvc.Html
@model SettlementAbsenceReportModel
@{
    ViewBag.Title = "الغياب";
}

@Html.AntiForgeryToken()
@Html.SavedModel(Model)

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">البحث</div>
            <div class="panel-body">
                <fieldset>
                    <legend>بحث</legend>
                    <div class="panel-body">
                        <div>
                            @Html.AjaxNote()
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DateFrom)
                                    @Html.DatePickerFor(model => model.DateFrom)
                                    @Html.ValidationMessageFor(model => model.DateFrom)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DateTo)
                                    @Html.DatePickerFor(model => model.DateTo)
                                    @Html.ValidationMessageFor(model => model.DateTo)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AbsenceType, new { @class = "control-label" })
                                    @Html.EnumDropDownListFor(model => model.AbsenceType, "--اختر--", new { @class = "field_menu form-control" })
                                    @Html.ValidationMessageFor(model => model.AbsenceType, null, new { @class = "has_error" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input name="print" type="submit" value="طباعة" class="btn btn-info" onclick="this.form.submit()" />
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="row"><br/>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">@ViewBag.Title</div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table data-order='[]' class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>الرقم الوظيفي</th>
                                        <th>الاسم</th>
                                        <th>الوحدة التنظيمية</th>
                                        <th>الادارة</th>
                                        <th>القسم</th>
                                        <th>الوحدة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Grid)
                                {
                                    <tr class="odd gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.JobNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Center)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Division)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.panel -->
