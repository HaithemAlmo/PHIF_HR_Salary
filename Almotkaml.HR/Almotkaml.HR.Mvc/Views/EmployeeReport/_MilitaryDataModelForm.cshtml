            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.GranduationDateFrom)
                @Html.DatePickerFor(model => model.GranduationDateFrom)
                @Html.ValidationMessageFor(model => model.GranduationDateFrom)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.GranduationDateTo)
