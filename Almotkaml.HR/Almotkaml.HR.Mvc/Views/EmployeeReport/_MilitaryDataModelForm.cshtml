@model EmployeeReportModel


    <div class="panel-body">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.AdjectiveMilitary, new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.AdjectiveMilitary, "--اختر--", new { @class = "field_menu form-control" })
